{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue"],
  "exclude": ["node-modules"]
}
